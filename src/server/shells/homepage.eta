                <div class="code">
                    <pre><span class="kw">import</span> { <span class="fn">vlist</span> } <span class="kw">from</span> <span class="str">"@floor/vlist"</span>

<span class="kw">const</span> list = <span class="fn">vlist</span>({
  <span class="prop">container</span><span class="par">:</span> <span class="str">"#list"</span>,
  <span class="prop">item</span><span class="par">:</span> {
    <span class="prop">height</span><span class="par">:</span> <span class="num">48</span>,
    <span class="prop">template</span><span class="par">:</span> (item) <span class="op">=></span> <span class="str">`&lt;div&gt;${item.name}&lt;/div&gt;`</span>
  }
}).<span class="fn">build</span>()

list.<span class="fn">setItems</span>(
  Array.<span class="fn">from</span>({ <span class="prop">length</span><span class="par">:</span> <span class="num">10_000</span> }, (_, i) <span class="op">=></span> ({
    <span class="prop">id</span><span class="par">:</span> i,
    <span class="prop">name</span><span class="par">:</span> <span class="str">`Item ${i}`</span>
  }))
)</pre>
